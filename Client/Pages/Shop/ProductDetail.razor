@inject Microsoft.Extensions.Localization.IStringLocalizer<ProductDetail> _localizer

<EditForm Model="@Product">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <DialogContent>
            <MudGrid>
                @if (Product.Id != 0)
                {
                    <MudItem xs="12" md="6">
                        <MudTextField Disabled For="@(() => Product.Id)" @bind-Value="Product.Id" Label="@_localizer["Id"]" />
                    </MudItem>
                }
                <MudTd DataLabel="Image">
                    <MudAvatar Image="@(Product.ImageDataURL)" Square="true" Style="height: auto; width: auto; max-height: 100px;">
                    </MudAvatar>
                </MudTd>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => Product.Name)" @bind-Value="Product.Name" Label="@_localizer["Name"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => Product.Price)" @bind-Value="Product.Price" Label="@_localizer["Price"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => Product.Description)" @bind-Value="Product.Description" Label="@_localizer["Description"]" />
                </MudItem>
               
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => Product.Rate)" @bind-Value="Product.Rate" Label="@_localizer["Rate"]" />
                </MudItem>
                
             
            </MudGrid>
        </DialogContent>
        <DialogActions>
            
        </DialogActions>
    </MudDialog>
</EditForm>