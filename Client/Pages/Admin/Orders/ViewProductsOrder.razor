<MudDialog>
    <TitleContent>
        Order Products
    </TitleContent>
    <DialogContent>
        <MudTable Items="OrderItems" Hover="true" Bordered="true" Striped="true">
            <HeaderContent>
                <MudTh>Product Image</MudTh>
                <MudTh>Product Name</MudTh>
                <MudTh>Ordered Quantity</MudTh> <!-- Số lượng đã đặt -->
                <MudTh>In Stock</MudTh> <!-- Tồn kho -->
                <MudTh>Price</MudTh>
                <MudTh>Total</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd><img class="img-product" src="@(context.ProductImage)" Square="true" /></MudTd>
                <MudTd>@context.ProductName</MudTd>
                <MudTd>@context.QuantityOrdered</MudTd> <!-- Hiển thị số lượng đã đặt -->
                <MudTd>@context.Quantity</MudTd> <!-- Hiển thị tồn kho -->
                <MudTd>@context.ProductPrice</MudTd>
                <MudTd>@(context.QuantityOrdered * context.ProductPrice)</MudTd>
            </RowTemplate>
        </MudTable>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined" OnClick="CloseDialog">Close</MudButton>
    </DialogActions>
</MudDialog>
<style>
    .img-product {
        width: 50px;
        height: 50px;
        object-fit: contain;
        border-radius: 10px;
    }
</style>